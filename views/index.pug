- const initialInput = 'zxcvb';
- const initialColour = '#d0d0e0';
- const maxAmount = 200;

doctype html
html(xmlns="http://www.w3.org/1999/xhtml")
  head
  include head.pug

  body
    main.wrapper
      h1 Snow Quotes
      form(method="post" action="/snow")
        label(
          for="letters"
          class="m-b-10"
        ) Type letters [a-z] or numbers [0-9]
        input(
          type="text"
          class="letters m-b-20"
          name="letters"
          id="letters"
          value=`${initialInput}`
          autocomplete="off"
          placeholder=""
          required
        )
        .fieldset.m-b-20
          section.m-r-5
            label(
              for="quantity"
              class="m-b-10"
            ) Amount [1-200]
            input(
              type="number"
              class="quantity"
              name="quantity"
              id="quantity"
              value="100"
              min="1"
              max=`${maxAmount}`
              autocomplete="off"
              placeholder=""
              required
            )
          section.m-l-5
            label(
              for="colour"
              class="m-b-10"
            ) Colour
            input(
              type="color" 
              class="colour m-b-20"
              name="colour"
              id="colour"
              value=`${initialColour}`
              style="display:block;"
            )
        .fieldset.m-b-20
          section.m-r-5
            a(
              type="button"
              class="btn start"
            ) 
              span Begin Snow 
              span(
                class="snowflake-icon"
              ) ❄️
          section.m-l-5
            input(
              type="text"
              class="hidden url"
            )
            a(
              type="button"
              class="btn copy"
            ) 
              span.m-r-5 Copy Link
              i(class="fas fa-copy")

      .toast-message.none 
        span.m-r-5 Copied
        i(class="fas fa-check")
      
    script
      include ../public/index.js