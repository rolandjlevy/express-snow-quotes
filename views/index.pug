- const initialInput = 't]';

doctype html
html
  head
  include head.pug

  body
    main.wrapper
      form(method="post" action="/snow")
        input(
          type="number"
          class="quantity m-b-20"
          name="quantity"
          value="100"
          min="1"
          max="500"
          autocomplete="off"
          placeholder=""
          required
        )
        input(
          type="text"
          class="letters"
          name="letters"
          value=`${initialInput}`
          autocomplete="off"
          placeholder=""
          required
        )
        input(
          type="color" 
          name="colour"
          value="#ffffff"
          style="display:none;"
          disabled
        )
        button(
          type="submit"
          class="btn"
        ) Go!
      div.display #{initialInput}
      
    script
      include ../public/index.js